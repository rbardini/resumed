{
  "name": "resumed",
  "version": "0.0.0-development",
  "description": "Lightweight JSON Resume builder, no-frills alternative to resume-cli",
  "keywords": [
    "resume",
    "json",
    "jsonresume",
    "cli",
    "resume-cli",
    "curriculum",
    "curriculum-vitae",
    "cv",
    "employment"
  ],
  "homepage": "https://github.com/rbardini/resumed",
  "bugs": {
    "url": "https://github.com/rbardini/resumed/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rbardini/resumed.git"
  },
  "license": "MIT",
  "author": {
    "name": "Rafael Bardini",
    "email": "rafael@rbardini.com",
    "url": "https://rbardini.com/"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "bin": "./bin/resumed.js",
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "prebuild": "json2ts node_modules/@jsonresume/schema/schema.json src/resume-schema.d.ts",
    "build": "vite build",
    "format": "prettier .",
    "lint": "publint",
    "prepare": "husky && npm run build",
    "start": "vite build --watch",
    "test": "vitest"
  },
  "dependencies": {
    "@jsonresume/schema": "^1.0.0",
    "sade": "^1.7.0",
    "strip-json-comments": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "24.5.2",
    "@vitest/coverage-v8": "3.2.4",
    "husky": "9.1.7",
    "json-schema-to-typescript": "15.0.4",
    "jsonresume-theme-even": "0.26.0",
    "lint-staged": "16.1.6",
    "prettier": "3.6.2",
    "prettier-plugin-organize-imports": "4.3.0",
    "prettier-plugin-packagejson": "2.5.19",
    "publint": "0.3.13",
    "puppeteer": "24.22.0",
    "tslib": "2.8.1",
    "typescript": "5.9.2",
    "vite": "7.1.6",
    "vite-plugin-dts": "4.5.4",
    "vitest": "3.2.4"
  },
  "peerDependencies": {
    "puppeteer": "^24.0.0"
  },
  "peerDependenciesMeta": {
    "puppeteer": {
      "optional": true
    }
  },
  "engines": {
    "node": "^20.12 || >=21.7"
  }
}
