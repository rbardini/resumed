{
  "name": "resumed",
  "version": "0.0.0-development",
  "description": "Lightweight JSON Resume builder, no-frills alternative to resume-cli",
  "keywords": [
    "resume",
    "json",
    "jsonresume",
    "cli",
    "resume-cli",
    "curriculum",
    "curriculum-vitae",
    "cv",
    "employment"
  ],
  "homepage": "https://github.com/rbardini/resumed",
  "bugs": {
    "url": "https://github.com/rbardini/resumed/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rbardini/resumed.git"
  },
  "license": "MIT",
  "author": {
    "name": "Rafael Bardini",
    "email": "rafael@rbardini.com",
    "url": "https://rbardini.com/"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "bin": "./bin/resumed.js",
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "prebuild": "json2ts node_modules/@jsonresume/schema/schema.json src/resume-schema.d.ts",
    "build": "vite build",
    "format": "prettier .",
    "lint": "publint",
    "prepare": "husky && npm run build",
    "start": "vite build --watch",
    "test": "FORCE_COLOR=0 vitest"
  },
  "dependencies": {
    "@jsonresume/schema": "^1.0.0",
    "sade": "^1.7.0",
    "strip-json-comments": "^5.0.1",
    "yoctocolors": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "20.16.1",
    "@vitest/coverage-v8": "2.0.5",
    "husky": "9.1.5",
    "json-schema-to-typescript": "13.1.1",
    "jsonresume-theme-even": "0.22.1",
    "lint-staged": "15.2.9",
    "prettier": "3.3.3",
    "prettier-plugin-organize-imports": "4.0.0",
    "prettier-plugin-packagejson": "2.5.2",
    "publint": "0.2.10",
    "puppeteer": "23.2.1",
    "tslib": "2.7.0",
    "typescript": "5.5.4",
    "vite": "5.4.2",
    "vite-plugin-dts": "4.0.3",
    "vitest": "2.0.5"
  },
  "peerDependencies": {
    "puppeteer": "^23.0.0"
  },
  "peerDependenciesMeta": {
    "puppeteer": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=20"
  }
}
